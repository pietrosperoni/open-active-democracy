<%= link_to image_tag("rss.gif", :border => 0, :align => "right", :title => "Fáðu fréttir tengt samningaferlinu í RSS", :alt => "Fáðu fréttir tengt samningaferlinu í RSS"), "http://esb.utn.is/hlidarval/frettir/rss.xml" %>
<h4 title="Fréttayfirlit frá kynningarvef ráðuneytisins">Nýjustu fréttir</h4>
<div id="utn_rss">
	
</div>

<script type="text/javascript">
jQuery(document).ready(function() {
jQuery.jGFeed('http://esb.utn.is/hlidarval/frettir/rss.xml',
function(feeds){
  // Check for errors
  if(!feeds){
    // there was an error
    return false;
  }
  // do whatever you want with feeds here
  for(var i=0; i<feeds.entries.length; i++){
    var entry = feeds.entries[i];
    // Entry title
	pd= new Date(Date.parse(entry.publishedDate));
    date_html='('+pd.getDate()+'-'+pd.getMonth()+'-'+pd.getFullYear()+')';
    jQuery("#utn_rss").append("<p class='rss_heading'><a target='_blank' href='" + entry.link+ " '> " + date_html +" " + entry.title + "</a></p>");
  }
}, 5);
});
</script> 

