<span id="priority_<%= priority.id.to_s %>_button_small">
<% if endorsement and endorsement.status == 'active' %>

	<% if endorsement.is_up? %>
		<span class="priority_remove" id="priority_add_<%= priority.id.to_s %>">
			<%= t('endorse.you') %>
			<%= link_to "&nbsp;x".html_safe, endorsement_path(endorsement, :region => region), 
			            :method => :delete,
                  :remote=>true,
                  'data-disable-with' => "",
                  'data-loader-name' => "circle",
			            :class => "priority_remove_link", :title => t('endorse.delete.title') %>
		</span>
	<% else %>
		<span class="priority_remove_oppose" id="priority_add_<%= priority.id.to_s %>">
			<%= t('oppose.you') %>
			<%= link_to "&nbsp;x".html_safe, endorsement_path(endorsement, :region => region),
			            :method => :delete,
                  :remote=>true,
                  'data-disable-with' => "",
                  'data-loader-name' => "circle",
			            :class => "priority_remove_link",
			            :title => t('oppose.delete.title') %>
		</span>
	<% end %>
	
<% else %>
	<span class="priority_add" id="priority_add_<%= priority.id.to_s %>">
		<%= link_to t('endorse.name'), endorse_priority_path(priority, :referral_id => (@user || nil), :region => region, :value => 1),
                :remote=>true,
                'data-disable-with' => escape_t(t(:ajax_endorsing)),
                'data-loader-name' => "horizontal_small",
		            :class => "priority_add_link", :title =>  t('endorse.title') %>		
	</span>
	<span class="endorse_or"><%= t('or') %></span>
	<span class="priority_add" id="priority_add_<%= priority.id.to_s %>">
		<%= link_to t('oppose.name'), endorse_priority_path(priority, :referral_id => (@user || nil), :region => region, :value => -1),
                :remote=>true,
                'data-disable-with' => escape_t(t(:ajax_opposing)),
                'data-loader-name' => "horizontal_small",
		            :class => "priority_add_link", :title =>  t('oppose.title') %>
	</span>	
<% end %>
</span>
