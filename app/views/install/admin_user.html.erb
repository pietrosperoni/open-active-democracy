<html>
<head>
	<title></title>
	<style type="text/css">
		.field {
			margin-bottom: 20px;
		}
		body {
			margin: 20px;
		}
	</style>
</head>
<body>
<%= flash_div :warning, :notice, :error %>
<h1><%= tr("Now create your Administrator account", "view/install/admin_user")%></h1>

<table border="0" cellspacing="0" cellpadding="0">
	
	<tr><td valign="top" style="padding-left: 20px;">

			<div id="new_user_form">

				<%= form_for :user, :url => { :controller => "install", :action => "create_admin_user"} do |f| -%>
				<%= error_messages_for :user, :header_message => tr("There was a problem creating your account", "view/install/admin_user") %>
	
				<div class="field">
					<table border="0" cellspacing="0" cellpadding="0">
						<tr><td valign="top">
							<div class="field_label">
								<%= tr("First name", "view/install/admin_user")%>
							</div>
							<div class="field_box">
					    		<%= f.text_field :first_name, :size => 12 %> 
							</div>
						</td><td valign="top" style="padding-left: 3px;">
							<div class="field_label">
								<%= tr("and Last name", "view/install/admin_user")%>
							</div>
							<div class="field_box">
					    		<%= f.text_field :last_name, :size => 15 %>
							</div>
						</td>
						</tr>
					</table>
				</div>

				<div class="field">
					<div class="field_label">
						<%= tr("Email address", "view/install/admin_user")%>
					</div>
					<div class="field_box">
						<%= f.text_field :email %>
					</div>
				</div>

				<div class="field">
				<table border="0" cellspacing="0" cellpadding="0">
					<tr><td valign="top">
						<div class="field_label"><%= tr("Password", "view/install/admin_user")%></div>
						<div class="field_box">
						<%= f.password_field :password, :size => 13 %>
						</div>
					</td><td valign="top" style="padding-left: 3px;">
						<div class="field_label"><%= tr("and re-type it", "view/install/admin_user")%></div>
						<div class="field_box">
						<%= f.password_field :password_confirmation, :size => 13 %>
						</div>
					</td>
					</tr>
				</table>
				</div>

				<div class="field">
				<div class="field_label">
					<%= tr("How should you be identified on the site?", "view/install/admin_user")%>
				</div>
				<div class="field_box">
					<%= f.text_field :login, :maxlength => 40, :size => 30 %>
				</div>
				</div>

        <div class="field">
        <div class="field_label">
          <%= tr("Verify your humanity", "view/install/admin_user")%>
        </div>
        <div class="field_box">
          <%= show_simple_captcha(:object=>"user", :image_style => "random", :distortion=>"medium", :code_type=>'numeric', :label=>tr("(enter code from the image)")) %>
        </div>
        </div>



				<%= submit_tag tr("Save your account", "view/install/admin_user"), :class => "yellow_button" %>

				<% end -%>

			</div>
			
		</td>
	</tr>
</table>
</body>
</html>