<% if logged_in? %>
<div class="comment_link_add" id="comment_link_<%= activity.id.to_s %>">
	<%= link_to t('comments.add'), new_activity_comment_url(activity), :method => :get,
              :remote=>true,
              'data-disable-with' => escape_t(t(:ajax_sending)),
              'data-loader-name' => "horizontal_small" %>
	<% if not current_page?(activity_comments_url(activity)) %>
		&middot;	
		<%= link_to_unless_current t('comments.permalink'), activity_comments_url(activity) %>
	<% end %>
</div>
<% end %>