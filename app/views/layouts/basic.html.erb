<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html <%=(Tr8n::Config.current_language and Tr8n::Config.current_language.right_to_left) ? "dir=\"rtl\"".html_safe : "" -%> xmlns="http://www.w3.org/1999/xhtml" xml:lang="is" lang="is" xmlns:fb="http://www.facebook.com/2008/fbml">

  <head><meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= @page_title || tr(current_government.name,"Name from database") %></title>
    <%= javascript_include_tag :defaults %>
    <%= render :partial => "shared/description" %>
    <%= render :partial => "shared/head" %>
    <%= render :partial => "shared/javascripts" %>
    <%= render :partial => "shared/css" %>

    <%= render :partial => "shared/priority_processes_head" if controller_name.index("process") %>
<%= stylesheet_link_tag "/stylesheets_old/color" %>    
<%= stylesheet_link_tag "/stylesheets_old/newstuff" %>
    <%= stylesheet_link_tag "/stylesheets_old/gnew" %>
    <%= stylesheet_link_tag "/stylesheets_old/temp" %>
    <%= javascript_include_tag "skuggathing" unless controller_name=="priority_processes" %>
    <% if ["users","sessions"].include?(controller_name)  %>
      <%= stylesheet_link_tag "/stylesheets_old/jquery.keypad" %>
      <%= javascript_include_tag "jquery.keypad.min" %>
    <% end %>
    <% if controller_name == "priorities" and action_name == "show" %>
      <%= render :partial=>"priorities/fb_og_tags" %>
    <% end %>
    <%= tr8n_scripts_tag %>
    <% if Tr8n::Config.current_language and Tr8n::Config.current_language.right_to_left %>
      <style type="text/css">
        #sidebar {
          float: left !important;
          position:relative;
       }
       .icon {
          float:right;
          left: 0px;
          right: -37px;
        }
      </style>
    <% end %>

  </head>
  <body class="C<%= h(controller.controller_name) %> <%= h(controller.controller_name) %>-<%= h(controller.action_name) %>">
    <%= csrf_meta_tag %>
    <div id="backgroundwrap">
      <div id="header">
        <table>
          <tr>
            <td><%= render :partial => "shared/branding/your_priorities"%></td>
            <td><%= render :partial => "ads/pick" %></td>
          </tr>
        </table>
      </div>
      <div id="contentwrap">
        <%= render :partial => "shared/menu" %>
        <%= flash_div :warning, :notice, :error %>
        <% if ["network","user_contacts"].include?(controller_name) -%>
          <table width="100%">
            <tr>
             <% if Tr8n::Config.current_language and Tr8n::Config.current_language.right_to_left %>
                <td>
                  <%= render :partial=>"network/sidebar" %>
                </td>
                <td>
                  <div id="content_text">
                    <%= yield :layout %>
                  </div>
                </td>
             <% else %>
                <td>
                  <div id="content_text">
                    <%= yield :layout %>
                  </div>
                </td>
                <td>
                  <%= render :partial=>"network/sidebar" %>
                </td>
              <% end %>
            </tr>
          </table>
        <% else %>
          <div id="content_text">
            <%= yield :layout %>
          </div>
        <% end %>
      </div>
      <%= render :partial => "shared/sidebar" %>
      <div class="push">
      </div>
    </div>
    <%= render :partial => "shared/footer" %>
    <%= render :partial => "shared/analytics" %>
    <%= render :partial => "shared/facebook_footer" %>
    <%= render :partial => "shared/google_translate" %>
    <!-- <%= h(controller.controller_name) %> <%= h(controller.action_name) %> -->
  </body>

</html>
